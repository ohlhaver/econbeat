
<header>
  <div class ="span8 offset2">
  <div class="navbar navbar-static-top">
    <div class="navbar-inner">
      <div class="container">
        <div class ="jlogo">
        <%= link_to image_tag( 'logo.gif'), root_path, id: "logo" %>
        </div>
        <nav>

          <ul class="nav pull-left">
            
                        <% if current_user %> 
            <li><%= link_to current_user.name, current_user %></li>
             

            <%end%>
            



            
              <% if params[:controller] == "static_pages" %>
              <li><div class ="visible-phone"> <%= button_to "Post", new_post_path, :class => "btn btn-small btn-primary btn-posting", :method => :get %></div> </li>
            
              <%else%>
              <li> <%= button_to "Post", new_post_path, :class => "btn btn-small btn-primary btn-posting", :method => :get %> </li>
              <%end%>
            </ul>
             <ul class="nav pull-right">

            <% if current_user %>
              <li>
                    <div class ="hidden-phone"><%= link_to "Sign out", signout_path, id: "sign_out" %></div>
                  </li>
               

              <%else%>
              <li><%= link_to "Join!", "/auth/facebook", id: "sign_in" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
</header>