<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%=h yield(:title) %> Jurnalo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield :head %>

  </head>
  <body>
    <script>$('.best_in_place').bind("ajax:success", function(){$(this).closest('tr').effect('highlight'));});</script>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=266726516779542";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
      
    <%= render 'layouts/header' if current_user || params[:action] == "contact" || params[:action] == "privacy" || params[:action] == "show" || params[:action] == "similar" || params[:controller] == "actions"%>

    <div class="container">
    <div class="span8 offset2">
        
    
      <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><b><%= raw value %></b></div>
      <% end %>
      <!--%= render 'shared/post_form' if current_user %-->
      <%= yield %>
    
    </div>
    </div>
    <div class="span12">
    <footer>
      <% if current_user %>
      <div id="fb-root"></div>
    <script src="http://connect.facebook.net/en_US/all.js"></script>
    <p>

    <p>
    <input type="button"
      onclick="sendRequestViaMultiFriendSelector(); return false;"
      value="Invite friends" class = "btn btn-small btn-primary btn-posting"
    />
    </p>
    
    <script>
      FB.init({
        appId  : ENV['FACEBOOK_APP_ID'],
        frictionlessRequests: true
      });

      function sendRequestViaMultiFriendSelector() {
        FB.ui({method: 'apprequests',
          message: 'invites you to Jurnalo',
    new_style_message: true
        }, requestCallback);
      }
      
      function requestCallback(response) {
        // Handle callback here
      }
    </script>
                       
               <%= link_to "Jurnalo's Top 250", authors_path %> · <%= link_to "Contact", contact_path %> · <%= link_to "Sign out", signout_path, id: "sign_out" %><br><br>
    <% end %>
                  
               
      (c) Jurnalo · <%= link_to "Privacy", privacy_path %>  </footer>
  
  </body>
</html>
