<% content_for :head do %>
  <%= tag :meta, property: "fb:app_id", content: ENV['FACEBOOK_APP_ID'] %>
  <%= tag :meta, property: "og:site_name", content: "Jurnalo" %>
  <%= tag :meta, property: "og:type", content: "article" %>
  <%= tag :meta, property: "og:title", content: @article.title %>
  <%= tag :meta, property: "og:url", content: article_url(@article) %>
  
<% end %>

<div class="row">
  <div class = "span8">
    <br>
    <ol class="microposts">
      
      <div id ="item_text">

    
      <span class = "user"><%= link_to @article.catcher.author.name, @article.catcher.author %></span>
       <div id = "follow_button">
<%= render 'authors/subscribe_form' %></div>
      </div>
      <br>

      <div id="<%= @article.id %>">  

      <div id ="star"><div class="fb-send" data-font="arial"></div></div>
      <div id ="item_text">

          <span class="content"><b><%= link_to @article.title, @article.url %></b></span>

          

           <span class="timestamp"> 

        <!--% if @post.fbaction_id %-->

<%if @article.likes && @article.likes.count > 0  %> 
                <%= link_to 'like', :controller => "articles", :action => "like", :id => @article.id %> (<%=  @article.likes.count.to_s %>) · 
            <%else%>
                 <%= link_to 'like', :controller => "articles", :action => "like", :id => @article.id %> · 
            <%end%>
            
              <%= time_ago_in_words(@article.created_at) %> ago   

        </span>
     
          
             
  </span>
        <br><br> 
      	</div>

       
      </div>



     
      
    </ol>
    <br>
    <div class="fb-comments" data-href="<%= request.url%>" data-num-posts="10"></div>
    <% if @actions.any? %>
    <br><br>
      <span class = "user">More articles by <%= link_to (@article.catcher.author.name).html_safe , @article.catcher.author , title: @article.catcher.author.name, "data-content" => "#{popover_link (@article.catcher.author)}", rel: 'popover', "trigger"=>"hover", "data-placement"=>"right" %></span>
      
         <ol class="profile_microposts">
          <%= render @actions %>
          </ol>
          <br>
          <%= paginate @actions %>

        <%end%>
  </div>
  <br>
</div>

