<% content_for :head do %>
  <%= tag :meta, property: "fb:app_id", content: ENV['FACEBOOK_APP_ID'] %>
  <%= tag :meta, property: "og:site_name", content: "Jurnalo" %>
  <%= tag :meta, property: "og:type", content: "profile" %>
  <%= tag :meta, property: "og:title", content: @author.name %>
  <%= tag :meta, property: "og:description", content: "Follow " + @author.name + " now and always get all of " + @author.name + "'s articles posted anywhere on the web!" %>
  <%= tag :meta, property: "og:url", content: author_url(@author) %>
   <%= tag :meta, property: "og:image", content: request.protocol + request.host + image_path("256n.png") %>

  
<% end %>


     <div class ="user_show">

  <div class="row">

         <div class="span6"><div class ="upper_section"><h3><%= @author.name %>&nbsp;&nbsp;&nbsp;<div id = "follow_button">
<%= render 'subscribe_form' %></div>&nbsp;&nbsp;&nbsp;<div id = "follow_button"> <% if current_user && current_user.subscribed?(@author)  %> 
  <% if current_user.subscribed?(@author).starred == true%>
       
          <%= link_to raw('<i class="icon-star"></i>'+ ' unstar'), "/subscriptions/#{current_user.subscriptions.find_by_author_id(@author.id).id}/unstar", :class => "btn btn-small", title: 'click to unstar', rel: 'tooltip', "data-placement"=>"bottom" %>
        <%else%>

          <%= link_to raw('<i class="icon-star-empty"></i>'+ ' star'), "/subscriptions/#{current_user.subscriptions.find_by_author_id(@author.id).id}/star", :class => "btn btn-small", title: 'click to star this author', rel: 'tooltip', "data-placement"=>"bottom"  %>
          
        <%end%>
      <%end%></div></h3>
      <div class ="hidden-phone"><span class="timestamp"><%= link_to_function raw('<i class="icon-envelope"></i>'+ ' send'), "sendMessage(); return false;" %>&nbsp;&nbsp;<%= link_to link_to raw('<i class="icon-list-alt"></i> ') + "wikipedia", "http://en.wikipedia.org/wiki/" + @author.name %></span></div>
         <script>


                // assume we are already logged in

          function sendMessage() {
                FB.ui({
                    method: 'send',
                    name: '<%= @author.name%>' ,
                    link: '<%= "https://www.jurnalo.com" + author_path(@author)%>',
                    description: 'Subscribe to this author via Jurnalo.'
                    })}
           </script>


</div>

</div>

     
<div class ="span2">
  <div class="fb-like" data-send="false" data-width="50" data-show-faces="false" data-font="arial" data-layout="button_count" data-href="<%= request.url%>"></div>
  
    
      </div>

  <div class="span6">
    <div class ="upper_section">
    <br>
       <% if @actions.any? %>
       <br>
       
      <span class = "user">Latest posts by <%= link_to (@author.name).html_safe , @author , title: @author.name, "data-content" => "#{popover_link (@author)}", rel: 'popover', "trigger"=>"hover", "data-placement"=>"right" %></span>
    </div>
       <br>

     

      
         <ol class="profile_microposts">
          <%= render @actions %>
          </ol>
          <br>
          <%= paginate @actions %>
  
        <%end%>
       
        </div>

         <div class="span2">


        <% if @subscribed_friends && @subscribed_friends.any? %>
       
        Friends following <%= @author.name %>

      
         <ol class="profile_microposts">
          <%= render @subscribed_friends %>
          </ol>
          <br>
      
<%end%>

<% if @recommended.any? %>
      
        Followers of <%= @author.name %> also follow

        


         <ol class="profile_microposts">
            <% @recommended.each do |r| %>
          <%=    render r[0] %>
          <%end%>
          </ol>
          <br>
          <span class="timestamp">
          <%= link_to raw('<i class="icon-plus"></i> ') + "more similar authors..", :action => "similar", :id => params[:id] %>
        </span>
          

<%end%>



</div>

</div>
</div>