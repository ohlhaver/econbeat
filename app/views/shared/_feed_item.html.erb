<li id="<%= feed_item.id %>">

  <span class="content"><b><%= link_to feed_item.headline, feed_item.url %></b></span>
  <% if feed_item.author %>  by <%= feed_item.author %><%end%>
  <span class="content"><%= truncate(feed_item.description, :length => 100, :omission =>"...", :separator => ' ') %> 
    <% if current_user == feed_item.user %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.url %>
  <% end %>
</span> 

  <span class="timestamp">
   <%= link_to feed_item.user.name, feed_item.user %> - <%= feed_item.topic.name + " - " unless feed_item.topic == nil  %> <%= time_ago_in_words(feed_item.created_at) %> ago 
  </span>
  
</li>