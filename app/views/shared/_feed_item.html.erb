<li id="<%= feed_item.id %>">


   </span><%= link_to feed_item.headline, feed_item.url %><br>
  <span class="content"><% if feed_item.author %>  by <%= feed_item.author %><%end%><br>
  <%= truncate(feed_item.description, :length => 100, :omission =>"...", :separator => ' ') %> </span>
    


<span class="timestamp">  
 <%= feed_item.topic.name + " - " unless feed_item.topic == nil  %> <%= time_ago_in_words(feed_item.created_at) %> ago 
</span>

<% if current_user == feed_item.user %> 
    <%= link_to "x", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.url %>

  <% end %>

   <br>
   <span class = "user">by <%= link_to feed_item.user.name, feed_item.user %>
  
</li>