<% unless feed_item.hidden? %> 
<li id="<%= feed_item.id %>">
	<div id ="user_image">
<%= link_to (image_tag feed_item.user.picture, :width => "20"), feed_item.user  %>
</div> 
<div id ="post_user">
 		<span class = "user"><%= link_to feed_item.user.name, feed_item.user %> </span>

<br>
 
		   <span class="content"><%= link_to feed_item.headline, feed_item.url %><br>
		 <% if feed_item.author %>  by <%= feed_item.author %><br><%end%>
		  <%= truncate(feed_item.description, :length => 100, :omission =>"...", :separator => ' ') %> </span>
		    


		<span class="timestamp">  
		 <%= feed_item.topic.name + " - " unless feed_item.topic == nil  %> <%= time_ago_in_words(feed_item.created_at) %> ago 
		

		<% if current_user == feed_item.user %> 
		    <%= link_to "x", feed_item, method: :delete,
		                                     data: { confirm: "You sure?" },
		                                     title: feed_item.url %>

		  <% end %>
</span>

</div>
   
 
</li>
<%end%>