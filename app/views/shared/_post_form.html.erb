
		
		
<%= simple_form_for @post , :html => { :class => 'form-horizontal' } do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
  <div id="post_box">
    <%= f.text_field :url, placeholder: "Submit a url..." %>
  </div>

<div id="button_box">
  <%= f.submit "Post", class: "btn btn-medium btn-primary btn-posting" %>
</div>

<% end %>
