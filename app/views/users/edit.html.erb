

<div class="row">
   <div class="span8">
    <h3>Update your profile</h3>
    <br>


    <%= form_for @user do |f| %>
   <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br />
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %><br />
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %><br />
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br /><br>
  </div>
  <div class="actions"><%= f.submit "Save changes", class: "btn btn-large btn-primary" %></div>
<% end %>
</div>
</div>