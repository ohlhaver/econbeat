<h1>Sign Up</h1>

<div class="row">
  <div class="span6 offset3">

<%= form_for @user do |f| %>
  <%= f.hidden_field :invitation_token %>
   <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit "Sign Up", class: "btn btn-large btn-primary" %></div>
<% end %>

  </div>
</div>