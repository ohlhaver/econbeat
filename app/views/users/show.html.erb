<div class ="user_show">
  <div class="row">
    
    
      <div class="span3">
            <h3>
          <%= @user.name %>
            <% if @utopic %>

              <%end%>
         </h3>
      </div>
      <div class="span3">
      <%= render 'shared/stats' %>
      </div>
      <div class="span2">
      <% if current_user.following?(@user) && @utopic %>
                  <%= render @utopic %>
                <%else%> 
      <%= render 'follow_form' if current_user %>
      <%end%>
      </div>
      <% if @user.posts.any? %>
      <%= render 'shared/utopic_menu' %>
         <ol class="microposts">
          <%= render @posts %>
          </ol>
        <%= paginate @posts %>
      <% end %>       
    
   
    
  </div> 

</div>