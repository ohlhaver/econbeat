
<div class="row-fluid">
  <div class="span12">
    <div class="span4">
          <h3>
        <%= @user.name %>
          <% if @utopic %> @ <%= @utopic.topic.name.downcase %> 
              <% if current_user.following?(@user) %>
                <%= render @utopic %>
              <%end%> 
            <%else%>
              <%= render 'follow_form' if current_user %>
            <%end%>
       </h3>
    </div>
    <div class="span8">
    <%= render 'shared/stats' %>
  </div>
    <% if @user.posts.any? %>
    <%= render 'shared/utopic_menu' %>
       <ol class="microposts">
        <%= render @posts %>
        </ol>
      <%= paginate @posts %>
    <% end %>       
  </div>
 
  
</div> 