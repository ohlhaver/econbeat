<div class ="user_show">

  <div class="row">
    
    
      <div class="span3">

            <h3>
         <%= image_tag @user.picture %> <%= @user.name %>
            <% if @utopic %>

              <%end%>
         </h3>
      </div>
      <div class="span3">
      <%= render 'shared/stats' %>
      </div>
      <div class="span2">
      <% if current_user.following?(@user) && @utopic %>
                  <%= render @utopic %>
                <%else%> 
      <%= render 'follow_form' if current_user %>
      <%end%>
      </div>
       <div class="span8">
      <% if @favorites.any? %>

      <div id = "favorite_posts">
        Starred

     



          <ol class="microposts">
          <%= render @favorites %>
          </ol>

      </div>
       <% end %> 
       <% if @posts.any? %>

      <div id = "favorite_posts">
        Latest

         <ol class="microposts">
          <%= render @posts %>
          </ol>
        <%= paginate @posts %>
      </div>
        <%end%>
           
    </div>
   
    
  </div> 

</div>