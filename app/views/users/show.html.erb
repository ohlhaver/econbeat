
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if current_user %>
    

    <% if @user.posts.any? %>
     <%= render 'shared/topic_menu' %>
       <ol class="microposts">
        <%= render @posts %>
      	</ol>
      <%= paginate @posts %>
    <% end %>       
  </div>
</div> 