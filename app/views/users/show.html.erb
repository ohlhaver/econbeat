<div class ="user_show">

  <div class="row">
   
    
    
      <div class="span3">
        <div class ="upper_section">
        
        <h4>  
        <% if @user.picture  %>  
         <%= image_tag @user.picture, :width => "50"  %>&nbsp; <%end%> <%= @user.name %>
       </h4>
        
        </div> 
      </div>
      <div class="span5">
        <div class ="upper_section">
        <div id = "follow_button">

                <%= render 'follow_form' unless @friendship == false %>            
 
       </div>
         </div>
      </div>

      <div class="span8">
        <div class ="upper_section">

        <%= render 'shared/stats' %>  

                 </div>
      </div>


    

       
       <% if @actions.any? %>
       <br><br> <br><br>
       <div class="span8">
        <div class ="upper_section">

         <ol class="profile_microposts">
          <%= render @actions %>
          </ol>
          <br>
          <%= paginate @actions %>
        </div>
        </div>
        <%end%>
        
           
    </div>
   
    
  </div> 

</div>