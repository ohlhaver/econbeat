<% unless post.hidden? %> 
<li id="<%= post.id %>">
  <div id ="star">
    <% if current_user == post.user %> 
        <% if post.starred == true%>
          <%= link_to raw('<i class="icon-star"></i>'), :controller => "posts", :action => "unstar", :id => post.id %>
        <%else%>

          <%= link_to raw('<i class="icon-star-empty"></i>'), :controller => "posts", :action => "star", :id => post.id %>
          
        <%end%>
        <%end%>
       </div>

  <div id ="post_image"><%= link_to (image_tag post.picture, :width => "50"), post.picture if post.picture != nil  %></div>
  <div id ="post_text">
    <span class="content"><b><%= link_to post.headline, post.url %></b></span>
    <% if post.author %>  <%= post.author %><%end%>
      <span class="content"><%= truncate(post.description, :length => 100, :omission =>"...", :separator => ' ') %>  
      	</span> 

      <span class="timestamp">
 <% if @user == current_user %>

 <span class="editable_topic">
          <% if post.topic %><i class="icon-cog"></i><% selected_topic = post.topic.name %> <%else%><i class="icon-list"></i>
          <% selected_topic = "Select topic!" %> <%end%>
           <%= best_in_place post, :topic_id, type: :select, collection: Topic::list_topic_options, :nil => "#{selected_topic}"%></span> · <%else%>
          <%= post.topic.name + " · " unless post.topic == nil  %> 
        <%end%>
               <div id = "comments_symbol">
                <% if post.comments %>           
               <% if post.comments.count == 1 %>
               <%= link_to (raw('<i class="icon-comment"></i>') + " " + post.comments.count.to_s), post%>
               <% elsif post.comments.count >= 2 %>
               <%= link_to (raw('<i class="icon-comment"></i>') + " "+ post.comments.count.to_s), post%>
              <%end%> ·&nbsp;  
    <%elsif post.fb_object %>          
              <%= link_to raw('<i class="icon-comment"></i>'), post%> ·&nbsp;             
    <%end%></div><%= time_ago_in_words(post.created_at) %> ago
      <% if current_user == post.user %>
        &nbsp;<%= link_to "x", post, method: :delete,
                                         data: { confirm: "You sure?" },
                                         title: post.url %>
      <% else %>

  · <%= link_to 'share', :controller => "posts", :action => "share", :id => post.id %>
  <%end%>
  </span>
  
              

 

	</div>

  
</li>


<%end%>



